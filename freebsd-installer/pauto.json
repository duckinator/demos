{
  "templateDir": "./templates",
  "steps": [
    {
      "description": "Open application menu.",
      "before": [
        "type 'cd ~/dev/misc/duckinator/system-config/freebsd-installer/; reset'",
        "key Return",
        "sleep 2",
        "search --name \"OBS 21\" key --window \"%1\" space",
        "sleep 2",
        "type 'sudo make clean iso'",
        "key Return",
        "sleep 10"
      ],
      "after": ["click 1"]
    },
    {
      "description": "Run VirtualBox.",
      "after": ["click 1"]
    },
    {
      "description": "Create a new virtual machine.",
      "after": ["click 1"]
    },
    {
      "description": "Enter a VM name.",
      "after": [
        "click 1",
        "type FreeBSD"
      ]
    },
    {
      "description": "Click next. (#1)",
      "after": ["click 1"]
    },
    {
      "descriptions": "Click next. (#2)",
      "after": ["click 1"]
    },
    {
      "description": "Click next. (#3)",
      "after": ["click 1"]
    },
    {
      "description": "Create a virtual hard disk.",
      "after": ["click 1"]
    },
    {
      "description": "Click next. Again.",
      "after": ["click 1"]
    },
    {
      "description": "Click next. Yet again.",
      "after": ["click 1"]
    },
    {
      "description": "Click create.",
      "after": ["click 1"]
    },


    {
      "describe": "Click settings.",
      "after": ["click 1"]
    },
    {
      "describe": "Click \"System\".",
      "after": ["click 1"]
    },
    {
      "describe": "Click \"Hard Disk\".",
      "after": ["click 1"]
    },
    {
      "describe": "Click OK.",
      "after": ["click 1"]
    },


    {
      "description": "Start the virtual machine.",
      "after": ["click 1"]
    },
    {
      "description": "Open file dialog.",
      "after": ["click 1"]
    },
    {
      "description": "Select the ISO file.",
      "after": ["click 1"]
    },
    {
      "description": "Click 'Open'.",
      "after": ["click 1"]
    },


    {
      "description": "Click 'Start'. And then wait.",
      "after": ["click 1"]
    }
  ]
}
